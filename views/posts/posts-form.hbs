<form action="/create-new-post" method="POST" enctype="multipart/form-data">
  <label> Content
    <input type="text" name="content" placeholder="Some text here..." />
  </label>

  <label> Image
    <input type="file" name="picPath"/>
  </label>

  <label> Picture Name
    <input type="text" name="picName" placeholder="Name of picture" />
  </label>

  <button type="submit">Save</button>
</form>